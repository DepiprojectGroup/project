pipeline {
    agent any
    
    environment {
        REPO_URL = 'https://github.com/DepiprojectGroup/project.git'
        MANIFESTS_DIR = 'k8s-manifests'
    }
    
    stages {
        stage('Clone Repository') {
            steps {
                script {
                    echo "Cloning repository from ${REPO_URL}"
                    git branch: 'main', url: "${REPO_URL}"
                }
            }
        }
        
        stage('Deploy to Kubernetes') {
            steps {
                script {
                    dir(env.MANIFESTS_DIR) {
                        // استخدم --insecure-skip-tls-verify لحل مشكلة الشهادة
                        sh '/kubectl apply -f . --insecure-skip-tls-verify'
                    }
                }
            }
        }
        
        stage('Verification') {
            steps {
                script {
                    sh '/kubectl get pods,svc,ing --all-namespaces --insecure-skip-tls-verify'
                }
            }
        }
    }
    
    post {
        success {
            echo '✅ تم النشر بنجاح!'
        }
        failure {
            echo '❌ فشل النشر!'
        }
    }
}
